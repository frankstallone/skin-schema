---
interface Props {
  heading?: string;
  subHeading?: string;
}

const { heading, subHeading } = Astro.props;
---

<div class="relative overflow-clip">
  <video autoplay loop muted playsinline class="min-w-zero max-w-full">
    <source src="/media/skin-schema-hero.webm" type="video/webm" />
    <source src="/media/skin-schema-hero.mp4" type="video/mp4" />
  </video>
  <div
    class="hidden wrapper region z-20 md:block absolute left-[0px] bottom-[10px] w-full h-full bg-gray-1200 bg-opacity-40"
  >
    <h1
      class="mt-zero text-gray-100 tracking-tight text-balance font-mono"
      style="max-inline-size: 18ch;"
    >
      {heading ? heading : "Skin Schema's Collaboration Opportunities"}
    </h1>
    {
      subHeading && (
        <h2
          class="text-gray-100 tracking-tight text-balance text-step-2"
          style="max-inline-size: 18ch;"
        >
          {subHeading}
        </h2>
      )
    }
  </div>
</div>
