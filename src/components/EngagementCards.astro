---
import EngagementCard from '../components/EngagementCard.astro';
import { shuffle } from '../utils';

import engagementAvatar01 from '/public/media/engagement-avatar-01.jpg';
import engagementAvatar02 from '/public/media/engagement-avatar-02.jpg';
import engagementAvatar03 from '/public/media/engagement-avatar-03.jpg';
import engagementAvatar04 from '/public/media/engagement-avatar-04.jpg';
import engagementAvatar05 from '/public/media/engagement-avatar-05.jpg';
import engagementAvatar06 from '/public/media/engagement-avatar-06.jpg';
import engagementAvatar07 from '/public/media/engagement-avatar-07.jpg';
import engagementAvatar08 from '/public/media/engagement-avatar-08.jpg';

const engagementCards = [
  {
    avatar: engagementAvatar01,
    user: 'yurbyskanzler',
    age: '2w',
    comment: "beautiful video, I'm curious to try this brand 😊✨",
  },
  {
    avatar: engagementAvatar02,
    user: 'nooriglow',
    age: '3w',
    comment: 'Beautifully captured your ritual',
  },
  {
    avatar: engagementAvatar03,
    user: 'busymumglow',
    age: '3w',
    comment: 'Love this, gorgeous video & your skin looks stunning 😍❤️',
  },
  {
    avatar: engagementAvatar04,
    user: 'ckylatan',
    age: '4w',
    comment: 'this was so comforting to watch❤️',
  },
  {
    avatar: engagementAvatar05,
    user: 'foodbooksjewels_',
    age: '2w',
    comment: 'Stunning shots 😍😍 love the last one so much',
  },
  {
    avatar: engagementAvatar06,
    user: '_bernicel',
    age: '2w',
    comment: 'I want this now 😍',
  },
  {
    avatar: engagementAvatar07,
    user: 'notordinaryskincare',
    age: '3w',
    comment: 'Love the design of the bottle! Very elegant',
  },
  {
    avatar: engagementAvatar07,
    user: 'notordinaryskincare',
    age: '4w',
